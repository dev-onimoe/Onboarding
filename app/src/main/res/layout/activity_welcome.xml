<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101D23"
    tools:context=".Welcome_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="55dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Continue from where you left off,
Shop new products,
Huge discounts awaiting you on your next order"
                android:textAlignment="gravity"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <Button
                android:id="@+id/signin_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_background"
                android:textStyle="bold"
                android:text="Sign in"
                android:textColor="#000000"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_light"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:background="@drawable/layout_back">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="@drawable/btn_back2"
                android:textStyle="bold"

                android:text="Sign up"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_light"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="55dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Create your account now to enjoy all the benefits of shopping with us all with the click of a button"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>