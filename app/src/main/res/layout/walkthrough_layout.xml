<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wt_rl"
    android:background="@color/dgrey">

    <ImageView
        android:id="@+id/wt_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/back_arrow_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/wt_pic"
            android:layout_width="300dp"
            android:layout_height="351dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_marginTop="-40dp"
            android:src="@drawable/controller" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wt_pic"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dot_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="68dp"
                android:orientation="horizontal" >


            </LinearLayout>

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="68dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Buy your favourite Gadgets"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="68dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Be the first to own one of the finest gadgets in the world after each release"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_back3"
            android:drawableEnd="@drawable/next_arrow"
            android:drawablePadding="-05dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingRight="5dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>




</RelativeLayout>